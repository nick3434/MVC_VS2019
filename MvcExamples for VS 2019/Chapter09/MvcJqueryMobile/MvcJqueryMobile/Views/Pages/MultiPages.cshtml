@model IEnumerable<MvcJqueryMobile.Models.Hero>

@{
    Layout = "~/Views/Shared/_LayoutRaw.Mobile.cshtml";
    ViewBag.Title = "Multi Pages";
}

<div data-role="page" id="mainpage">
    <div data-role="header">
        <h1>LOL英雄人物列表</h1>
    </div>
    <div role="main" class="ui-content">
        <img src="http://eune.leagueoflegends.com/sites/default/files/styles/scale_xlarge/public/upload/2017.10.10.articlebanner.champskinsale_en.jpg" alt="LOL" />
        <ul data-role="listview" data-inset="true">
            <li><a href="#page_Zilean">時光守護者--極靈</a></li>
            <li><a href="#page_Teemo">迅捷斥候--提摩</a></li>
            <li><a href="#page_Sona">琴仙--索娜</a></li>
        </ul>
    </div>
    <div data-role="footer" data-position="fixed">
        <h3>LOL英雄人物</h3>
    </div>
</div>

@foreach (var m in Model)
{
    <div data-role="page" id=@m.PageId>
        <div data-role="header" data-theme="a">
            <h1>LOL英雄人物  -- @m.Header</h1>
        </div>
        <div role="main" class="ui-content">
            <img src=@m.ImageUrl alt=@m.ImageAlt />
            <p>
                @m.Introduction
            </p>
            <div class="video-responsive">
                <iframe src=@m.VideoUrl frameborder="0" allowfullscreen></iframe>
            </div>
        </div>
        <div data-role="footer" data-theme="b" data-position="fixed">
            <h3>@m.Footer</h3>
        </div>
    </div>
}

@section topCSS{
<style>
    p {
        border: 1px solid black;
        border-radius: 5px;
        background-color: dodgerblue;
        padding: 15px;
        text-shadow: none;
        color: white;
    }

    img {
        width: 100%;
        height: auto;
        border-radius: 10px;
    }

    h1.ui-title {
        margin-left: 10px !important;
        margin-right: 10px !important;
    }

    .video-responsive {
        height: 0;
        position: relative;
        padding-bottom: 56.25%;
        overflow: hidden;
    }

    .video-responsive iframe {
        left: 0;
        top: 0;
        height: 100%;
        width: 100%;
        position: absolute;
    }
</style>    
}
