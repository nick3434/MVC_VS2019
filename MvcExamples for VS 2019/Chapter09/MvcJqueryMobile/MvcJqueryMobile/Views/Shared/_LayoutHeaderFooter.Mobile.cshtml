<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    @Styles.Render("~/Content/Mobile/css", "~/Content/jquerymobile/css")
    @Scripts.Render("~/bundles/jquery", "~/bundles/jquerymobile")

    @RenderSection("topCSS", required: false)
    @RenderSection("topJS", required: false)

    <script>
        $(document).ready(function () {
            $.mobile.ajaxEnabled = false;
        });
    </script>
</head>
<body>
    <div data-role="page">
        @RenderSection("Header", required:true)

        <div role="main" class="ui-content">
            @RenderBody()
        </div>

        @RenderSection("Footer", required: true)
    </div>
    @RenderSection("endCSS", required: false)
    @RenderSection("endJS", required: false)
</body>
</html>