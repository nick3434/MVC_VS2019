@model firstMVC.Models.Friend[]

@{
    ViewBag.Title = "ArrayWithNamedType";

    //取得所有Titles的欄位名稱
    var titles = Model.First().GetType().GetProperties().Select(p => p.Name).ToList();
}

<h2>ArrayWithNamedType</h2>


<table class="table">
    <tr>
        <th>
            @titles[0].ToString()
        </th>
        <th>
            @titles[1].ToString()
        </th>
    </tr>

    @for (int i = 0; i < Model.Count(); i++)
    {
        <tr>
            <td>@Model[i].Name</td>
            <td>@Model[i].Name</td>
        </tr>
    }
</table>
